{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./tsc",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "target": "es2017",
    "typeRoots": [
      "./node_modules/@types/**/*"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}